@model Quiz_App.Models.Quiz

@{
    ViewData["Title"] = "Yangi Test Qo'shish";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Yangi Test Qo'shish</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <!-- Xatolarni ko'rsatish - faqat xato bo'lganda -->
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        }

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Kategoriya <span class="text-danger">*</span></label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                <option value="">-- Kategoriyani tanlang --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Question" class="form-label">Savol <span class="text-danger">*</span></label>
                            <textarea asp-for="Question" class="form-control" rows="3" placeholder="Savolni kiriting"></textarea>
                            <span asp-validation-for="Question" class="text-danger"></span>
                        </div>

                        <h5 class="mb-3">Javob Variantlari</h5>

                        <div class="mb-3">
                            <label asp-for="Option1" class="form-label">1-javob <span class="text-danger">*</span></label>
                            <input asp-for="Option1" class="form-control" placeholder="Birinchi javob variantini kiriting" />
                            <span asp-validation-for="Option1" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Option2" class="form-label">2-javob <span class="text-danger">*</span></label>
                            <input asp-for="Option2" class="form-control" placeholder="Ikkinchi javob variantini kiriting" />
                            <span asp-validation-for="Option2" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Option3" class="form-label">3-javob <span class="text-danger">*</span></label>
                            <input asp-for="Option3" class="form-control" placeholder="Uchinchi javob variantini kiriting" />
                            <span asp-validation-for="Option3" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Option4" class="form-label">4-javob <span class="text-danger">*</span></label>
                            <input asp-for="Option4" class="form-control" placeholder="To'rtinchi javob variantini kiriting" />
                            <span asp-validation-for="Option4" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CorrectAnswer" class="form-label">To'g'ri javob <span class="text-danger">*</span></label>
                            <select asp-for="CorrectAnswer" class="form-select">
                                <option value="">-- To'g'ri javobni tanlang --</option>
                                <option value="1">1-javob</option>
                                <option value="2">2-javob</option>
                                <option value="3">3-javob</option>
                                <option value="4">4-javob</option>
                            </select>
                            <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="TestList" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Bekor qilish
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Saqlash
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}